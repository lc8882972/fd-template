{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "outDir": "build",
    "lib": [
      "es6",
      "dom",
    ]
  },
  "include": [
    "src/*",
  ],
  "exclude": [
    "node_modules",
    "build",
    "public",
    "static"
  ]
}
